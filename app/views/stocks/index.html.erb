<h1>Stocks</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |s| %>
      <tr>
        <td><%= s.name %></td>
        <td><%= s.price %></td>
        <td><%= s.count %></td>
        <td><%= link_to 'Show', s %></td>
        <td><%= link_to 'Edit', edit_stock_path(s) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_stock_path %>
